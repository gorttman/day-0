apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: day0-bootstrap
  namespace: argocd
spec:
  project: default
  source:
    repoURL: {{ bootstrap_repo }}
    targetRevision: main
    path: .
  destination:
    server: https://kubernetes.default.svc
    namespace: argocd
  syncPolicy:
    automated: {}
